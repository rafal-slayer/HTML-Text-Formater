{
  "name": "html-text-formater",
  "displayName": "HTML Text Formater",
  "description": "An extension that allows you to format all text contained within the HTML tags.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:html-text-formater.formatHTMLFile"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "html-text-formater.formatHTMLFile",
        "title": "Format HTML text"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "jsdom": "^21.1.0"
  }
}
